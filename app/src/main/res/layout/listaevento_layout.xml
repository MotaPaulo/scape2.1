<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EventoNome"
        android:id="@+id/TVnomeEvento"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#6083af" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EventoDescricao"
        android:id="@+id/TVdescricaoEvento"
        android:layout_below="@+id/TVnomeEvento"
        android:layout_alignLeft="@+id/TVnomeEvento"
        android:layout_alignStart="@+id/TVnomeEvento" />
</RelativeLayout>